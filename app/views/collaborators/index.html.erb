<div class="container">
<h1>Lista de colaboradores</h1>
</div>
 
<div class="container">
<table>
  <tr>
    <th>Email</th>
    <th></th>
    <th></th>
  </tr>
 
  <% @collaborators.each do |c| %>
    <tr>
      <td><%= c.email %></td>
      <td><%= link_to 'Editar', edit_collaborator_path(c) %></td>
      <td><%= link_to 'Eliminar', collaborator_path(c),
                    method: :delete, data: { confirm: 'Tem a certeza?' } %></td>
    </tr>
  <% end %>
</table>
</div>


<div class="container" style="margin-top:30px;">
  <%= link_to 'Adicionar novo', new_collaborator_path %>
</div>

<style type="text/css">

tr > td {
  padding-top: 5px;
  padding-right: 10px;
}

</style>