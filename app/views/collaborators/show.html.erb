<div class="container">
<h1><%= @welcome_msg %></h1>
</div>

<div class="container">

<%= form_for([@collaborator, @collaborator.moods.build]) do |f| %>
  <p>
    <%= f.label :rating %><br />
    <%= f.select :rating, options_for_select(%w[contente okay preocupado triste]) %>

  </p>

  <p>
    <%= f.label :comment %><br />
    <%= f.text_field :comment %>
  </p>

  <p>
    <%= f.submit %>
  </p>
<% end %>
</div>